<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <import resource="dao.xml"/>

    <bean id="eventService" class="controller.service.serviceImp.EventServiceImp" c:eventDao-ref="eventDao"/>
    <bean id="ticketService" class="controller.service.serviceImp.TicketServiceImp" c:ticketDao-ref="ticketDao"/>
    <bean id="userService" class="controller.service.serviceImp.UserServiceImp" c:userDao-ref="userDao"/>
    <bean id="locationService" class="controller.service.serviceImp.LocationServiceImp"
          c:locationDao-ref="locationDao"/>

</beans>